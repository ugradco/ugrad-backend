{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    },
    "rootDirs": ["."],
    "outDir": "dist",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/*", "./src/**/*"],
  "exclude": ["./dist"],
  "lib": ["es2018"]
}
